<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/listPreferredItemHeightSmall"
    android:paddingRight="8dp"
    android:paddingLeft="8dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:gravity="center_vertical"
    android:background="@color/alt_bg">

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/normal_text"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:text="username"
        />

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/username"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:textColor="@color/light_text"
        android:fontFamily="sans-serif-light"
        android:textStyle="italic"
        android:textSize="12sp"
        android:text="2 min ago" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/username"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:textColor="@color/normal_text"
        android:textSize="14sp"
        android:autoLink="web"
        android:text="This is a message" />


    <Button
        android:id="@+id/show_images"
        android:layout_width="match_parent"
        android:layout_below="@id/message"
        android:layout_alignParentRight="true"
        android:layout_height="32dp"
        android:textSize="12sp"
        android:fontFamily="sans-serif-light"
        android:gravity="right"
        android:textStyle="italic"
        android:textColor="@color/light_text"
        style="@style/SpinnerAppTheme"
        android:text="0 images attached"
        android:visibility="gone" />

    <HorizontalScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/show_images" >

        <LinearLayout android:id="@+id/images"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:visibility="gone">

        </LinearLayout>

     </HorizontalScrollView>

</RelativeLayout>