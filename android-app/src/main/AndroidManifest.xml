<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.afzaln.mi_chat"
    android:versionCode="2"
    android:versionName="See version.properties" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name=".MIChatApp">
        <activity
            android:name="com.afzaln.mi_chat.LoginActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@style/NoActionBarTheme"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.afzaln.mi_chat.MessagesActivity"
                  android:noHistory="true"
                  android:windowSoftInputMode="stateHidden|adjustResize"
                  android:theme="@style/AppTheme">
        </activity>

        <provider
            android:name=".provider.Provider"
            android:authorities="com.afzaln.mi_chat.provider"
            android:exported="false" >
        </provider>
    </application>

</manifest>